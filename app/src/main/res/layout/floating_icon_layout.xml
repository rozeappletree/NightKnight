<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/floating_icon_container">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/floating_icon_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:contentDescription="Floating Icon"
            android:src="@mipmap/ic_knight" />

        <TextView
            android:id="@+id/floating_icon_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="4dp"
            android:background="@drawable/rounded_background"
            android:padding="8dp"
            android:textColor="@android:color/white"
            android:visibility="gone" />
    </LinearLayout>

    <TextView
        android:id="@+id/device_usage_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Device usage: 86 / 120 mins - 72%"
        android:textColor="@color/my_red_light"
        android:textSize="9sp"
        android:background="@color/translucent_black"
        android:padding="2dp"
        android:layout_marginStart="54dp"
        android:layout_marginTop="3dp"/>

    <ProgressBar
        android:id="@+id/device_usage_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="90"
        android:progress="72"
        android:progressTint="@color/my_red_light"
        android:layout_marginStart="54dp"
        android:paddingTop="1dp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:paddingBottom="4dp"
        android:layout_marginTop="0dp"/>

    <TextView
        android:id="@+id/app_usage_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="App usage"
        android:textColor="@color/my_yellow_light"
        android:textSize="9sp"
        android:background="@color/translucent_black"
        android:padding="2dp"
        android:layout_marginStart="54dp"
        android:layout_marginTop="0dp"/>

    <ProgressBar
        android:id="@+id/app_usage_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="15"
        android:progress="10"
        android:progressTint="@color/my_yellow_light"
        android:layout_marginStart="54dp"
        android:paddingTop="1dp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:paddingBottom="4dp"
        android:layout_marginTop="0dp"/>

</LinearLayout>